<application name="QualNetManager" version="1.0" title="QualNet" resource_dir="/gui/icons/QTManagerApplication">
<actions>

<itemGroup name="MAN.TB.applicationGroup" isExclusive="true">
<item name="MAN.MT.Visualizer" icon="scenario_designer.png" isToggle="true" menuText="&amp;Architect" toolTip="Open Architect" actSlot="slotOpen3DVisualizer()" whatsThis="QualNet Architect: Design Mode"/>
<item name="MAN.MT.Analyzer" icon="analyzer.png" isToggle="true" menuText="&amp;Analyzer" toolTip="Open Analyzer" actSlot="slotOpenAnalyzer()" whatsThis="QualNet Analyzer"/>
<item name="MAN.MT.Tracer" icon="tracericon.png" isToggle="true" menuText="&amp;Packet Tracer" toolTip="Open Packet Tracer" actSlot="slotOpenPacketTracer()" whatsThis="QualNet Packet Tracer"/>
<item name="MAN.MT.SourceEditor" icon="textview.png" isToggle="true" menuText="&amp;File Editor" toolTip="Open File Editor" actSlot="slotOpenCodeView()" whatsThis="QualNet File Editor"/>
</itemGroup>

<item name="MAN.MN.quit" menuText="&amp;Exit" toolTip="Quit Application" accel="Ctrl+X" statusTip="quit" actSlot="slotQuitApplication()" />

<toolbar name="MAN.TB.applicationToolBar" toolButtonStyle="ToolButtonTextBesideIcon" isExclusiveToolBar="true"/>

<menu name="MAN.MN.HelpMenu" label="&amp;Help"/>

<item name="MAN.MT.faq" menuText="&amp;FAQ" toolTip="Frequently Asked Questions" statusTip="Frequently Asked Questions" actSlot="slotFAQ()" />

<item name="MAN.MT.QualNet_Documentation" menuText="Documentation HTML" toolTip="Open HTML Documentation" actSlot="slotLaunchWebHelp()" />
<item name="MAN.MT.QualNet_DocumentationFolder" menuText="Documentation Folder..." toolTip="Open Documentation Folder" actSlot="slotDocumentationFolder()" />


<item name="MAN.MT.ReleaseNotes" menuText="&amp;Release Notes" toolTip="View release notes" statusTip="View release notes" actSlot="slotReleaseNotes()" />
<item name="MAN.MT.keyHelp" menuText="&amp;Keyboard Shortcuts" isEnabled="true" accel="Ctrl+K" statusTip="Open Help for Keyboard Shortcuts" actSlot="slotKeyboardShortcuts()" />
<item name="MAN.MT.VisitProductPage" menuText="&amp;Visit the Product Website" toolTip="Visit the Product Website" statusTip="Visit the product Website" actSlot="slotVisitProductPage()" />
<item name="MAN.MT.About" menuText="&amp;About QualNet..." toolTip="About QualNet" statusTip="Open's the product Information page" actSlot="slotAbout()" /> 
<item name="MAN.MT.LicenseDialog" menuText="&amp;License and Libraries..." toolTip="License and Libraries"  statusTip="License and Libraries" actSlot="slotShowLicenseDialog()" />

<MAN.MN.HelpMenu>
    <MAN.MT.keyHelp/>
    <MAN.MT.faq/>
    <separator />
    <MAN.MT.QualNet_Documentation/>
    <MAN.MT.QualNet_DocumentationFolder/>

    <separator />
    <MAN.MT.VisitProductPage/>
    <MAN.MT.LicenseDialog/>
    <MAN.MT.About/>
</MAN.MN.HelpMenu>

<MAN.TB.applicationToolBar>
    <MAN.TB.applicationGroup/>
</MAN.TB.applicationToolBar>
</actions>
<collapsible alignment="left">
    <page name="MAN.CL.ListView" label="File System" >
    
    <!--<page name="MAN.CL.ListView" label="File System" icon="filesystemicon.png"> -->
        <vbox useSplitter="false">
            <widget name="MAN.CL.FileSytemView"/>
        </vbox>
    </page>
</collapsible>

</application>
